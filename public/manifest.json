{
  "name": "SaveTabs",
  "manifest_version": 2,
  "version": "2.0.2",
  "description": "__MSG_description__",
  "default_locale": "en",
  "icons": {
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon_128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "chrome://favicon/",
    "downloads"
  ]
}
