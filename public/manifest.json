{
  "name": "__MSG_extension_name__",
  "manifest_version": 2,
  "version": "3.1.0",
  "description": "__MSG_description__",
  "default_locale": "en",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-128.png",
    "default_popup": "savetabs.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "options.html",
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "chrome://favicon/",
    "downloads",
    "history",
    "bookmarks"
  ]
}
